[uwsgi]

chdir           = /var/myapps/djangosite/{{ django_site.name }}
module          = {{ django_site.name }}.wsgi
home            = /var/myapps/djangosite
uid             = www-data

# process-related settings
# master
master          = true
# maximum number of worker processes
processes       = 2
# the socket (use the full path to be safe
socket          = /var/myapps/djangosite/{{ django_site.name }}/{{ django_site.name }}.sock
# ... with appropriate permissions - may be needed
chmod-socket    = 600
# clear environment on exit
vacuum          = true
